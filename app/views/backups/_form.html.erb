<%= form_for @backup do |f| %>
	<%= f.label :app %>
	<%= f.select :app_id, App.all.collect{|a| [a.name, a.id]} %><br />

	<%= f.label :cloudfile_container %>
	<%= f.select :cloudfile_container_id, CloudfileContainer.all.collect{|cf| [cf.name, cf.id]}, {include_blank: true} %><br />

	<%= f.label :sftp_storage %>
	<%= f.select :sftp_storage_id, SftpStorage.all.collect{|ss| [ss.name, ss.id]}, {include_blank: true} %><br />

	<%= f.label :date %>
	<%= f.text_field :date %><br />

	<%= f.label :time %>
	<div class="input-append bootstrap-timepicker">
		<%= f.text_field :time %>
		<span class="add-on"><i class="icon-time"></i></span>
	</div>

	<%= f.submit %>
<% end %>